@model IEnumerable<GymBusiness.Models.Player>

@{
    ViewBag.Title = "Players";
 
}
    <link href="~/Content/Datatable.css" rel="stylesheet" />
<h2 class="tName">Players</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "mb-2 btn btn-info bcreate" })
</p>
<table class="table" id="Table">
    <thead>

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Coach.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Birth)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Coach.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Birth)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("PlayerChart", "Reports", "History_for_player", new { id = item.ID }, null) |
                @Html.ActionLink("PlayerHistory", "History", "History_for_player", new { id = item.ID }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

    </tbody>
</table>
@section scripts{
    <script src="~/Scripts/Datatable1.js"></script>
    <script src="~/Scripts/Datatable2.js"></script>
    <script>
        $(document).ready(function () {
            $('#Table').DataTable();
            $("#Table_info").text("");
        });
    </script>
}