@model IEnumerable<GymBusiness.Models.Load>

@{
    ViewBag.Title = "Loads";
}

<link href="~/Content/Datatable.css" rel="stylesheet" />

<h2 class="tName">Loads</h2>
<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="mb-2 btn btn-info bcreate"})
</p>
<table class="table" id="Table">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Load1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Load2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Load3)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Load1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Load2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Load3)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts{
    <script src="~/Scripts/Datatable1.js"></script>
    <script src="~/Scripts/Datatable2.js"></script>
    <script>
        $(document).ready(function () {
            $('#Table').DataTable();
            $("#Table_info").text("");
        });
    </script>
}