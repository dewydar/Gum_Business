@model IEnumerable<GymBusiness.Models.History_for_player>

@{
    ViewBag.Title = "History For Players";
}

    <link href="~/Content/Datatable.css" rel="stylesheet" />
<h2 class="tName">History For Players</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="mb-2 btn btn-info bcreate"})
</p>
<table class="table" id="Table">
    <thead>

        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Load.ID)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Player.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>Load1</th>
            <th>Load2</th>
            <th>Load3</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.Load.ID)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Player.Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(a => item.Load.Load1)
            </td>
            <td>
                @Html.DisplayFor(a => item.Load.Load2)
            </td>
            <td>
                @Html.DisplayFor(a => item.Load.Load3)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

    </tbody>
</table>

@section scripts{
    <script src="~/Scripts/Datatable1.js"></script>
    <script src="~/Scripts/Datatable2.js"></script>
    <script>
        $(document).ready(function () {
            $('#Table').DataTable();
            $("#Table_info").text("");
        });
    </script>
}