
@model GymBusiness.Models.ViewModels.LoginRegisterVM
@{
    ViewBag.Title = "Home Page";
    //Layout = "~/Views/Shared/_Layout.cshtml";
       Layout = "~/views/shared/_CustomLayout.cshtml";
}
@if (!User.Identity.IsAuthenticated)
{
<div id="popup">
    <div id="small-dialog" class="mfp-hide">
        <div class="signin-form profile">
            <h3>Login</h3>
            <div class="login-form">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.TextBoxFor(m => m.Login.Email, new { placeholder = "Coach Name" })
                    @Html.ValidationMessageFor(m => m.Login.Email, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Login.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })

                    <input type="submit" value="Login">
                }
            </div>
        </div>
    </div>
</div>
}

else
{
<div id="popup">
    <div id="small-dialog" class="mfp-hide">
        <div class="signin-form profile">
            <h3>Add Coach</h3>
            <div class="login-form">


                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.TextBoxFor(m => m.Register.UserName, new { placeholder = "Coach Name" })
                    @Html.ValidationMessageFor(m => m.Register.UserName, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Register.Email, new { placeholder = "E-mail" })
                    @Html.ValidationMessageFor(m => m.Register.Email, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Register.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Register.Password, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Register.ConfirmPassword, new { placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(m => m.Register.ConfirmPassword, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Register.Mobile, new { placeholder = "Mobile" })
                    @Html.ValidationMessageFor(m => m.Register.Mobile, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Register.height, new { placeholder = "Height" })
                    @Html.ValidationMessageFor(m => m.Register.height, "", new { @class = "text-danger" })



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Add" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
}

